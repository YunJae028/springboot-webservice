
    {{>layout/header}}
    <div class="container">
        <div class="row">
            <div class="col-lg-2">
                <h3 class="my-4 text-center">Category</h3>
            </div>
            <div class="col-lg-10 my-4 mb-4 border border-dark rounded-lg">
            <!-- 로그인기능 영역-->
            <br>
            <!-- 목록출력영역 -->
            <table class = "table table-hover">
                <thead>
                <tr>
                    <th scope="col">게시글번호</th>
                    <th scope="col">제목</th>
                    <th scope="col">작성자</th>
                    <th scope="col">작성일</th>
                </tr>
                </thead>
                <tbody id = "tbody">
                    {{#posts}} <!-- posts list 순회 (for문) -->
                        <tr>
                            <td style="width: 10%" class="text-center">{{id}}</td>
                            <td style="width: 10%" class="text-center"><a href="/posts/update/{{id}}">{{title}}</a></td>
                            <td style="width: 10%" class="text-center">{{author}}</td>
                            <td style="width: 10%" class="text-center">{{modifiedDate}}</td>
                        </tr>
                    {{/posts}}
                </tbody>
            </table>
        </div>
        </div>
    </div>
    <a href="/posts/save" role = "button" class = "btn btn-secondary mb-3">글 등록</a>
        {{>layout/footer}}
    </body>
</html>
